@model LibraryManagementSystem.Models.Loan
@{
    ViewData["Title"] = "Return Book";
}
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card">
            <div class="card-header bg-success text-white">Return Book</div>
            <div class="card-body">
                <div class="alert alert-info">Are you sure you want to return this book?</div>
                <dl class="row">
                    <dt class="col-sm-4">Book ID</dt>
                    <dd class="col-sm-8">@Model.BookId</dd>
                    <dt class="col-sm-4">Member ID</dt>
                    <dd class="col-sm-8">@Model.MemberId</dd>
                    <dt class="col-sm-4">Loan Date</dt>
                    <dd class="col-sm-8">@Model.LoanDate.ToString("yyyy-MM-dd")</dd>
                </dl>
                <form asp-action="Return" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-success">Return</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 